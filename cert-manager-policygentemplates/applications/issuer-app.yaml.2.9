apiVersion: app.k8s.io/v1beta1
kind: Application
metadata:
  name: cfssl-cert-manager-issuer
  namespace: cert-manager
spec:
  componentKinds:
  - group: apps.open-cluster-management.io
    kind: Subscription
  descriptor: {}
  selector:
    matchExpressions:
      - key: app
        operator: In
        values: 
          - cfssl-cert-manager-issuer
---
apiVersion: v1                      
kind: Namespace
metadata:
  name: helm-chartswikimediaorg-stable-ns
---
apiVersion: apps.open-cluster-management.io/v1
kind: Channel
metadata:
  annotations:
    apps.open-cluster-management.io/reconcile-rate: medium
  name: helm-chartswikimediaorg-stable
  namespace: helm-chartswikimediaorg-stable-ns
spec:
  type: HelmRepo
  pathname: 'https://helm-charts.wikimedia.org/stable'
---
apiVersion: apps.open-cluster-management.io/v1
kind: Subscription
metadata:
  annotations:
  labels:
    app: cfssl-cert-manager-issuer
  name: cfssl-cert-manager-issuer-subscription-1
  namespace: cert-manager
spec:
  channel: helm-chartswikimediaorg-stable-ns/helm-chartswikimediaorg-stable
  name: cfssl-issuer-crds
  packageOverrides:
  - packageName: cfssl-issuer-crds
    packageAlias: cfssl-issuer-crds
  placement:
    placementRef:
      kind: Placement
      name: cfssl-cert-manager-issuer-placement-1
---
apiVersion: cluster.open-cluster-management.io/v1beta1
kind: Placement
metadata:
  labels:
    app: cfssl-cert-manager-issuer
  name: cfssl-cert-manager-issuer-placement-1
  namespace: cert-manager
spec:
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            - key: 'cert-manager'
              operator: In
              values: ['true']
